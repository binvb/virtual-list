{
    "compilerOptions": {
      "target": "ESNext",
      "useDefineForClassFields": true,
      "module": "ESNext",
      "moduleResolution": "Node",
      "strict": true,
      "jsx": "preserve",
      "sourceMap": true,
      "resolveJsonModule": true,
      "isolatedModules": false,
      "esModuleInterop": true,
      "lib": ["ESNext", "DOM"],
      "skipLibCheck": true,
      "types": ["vitest/globals", "cypress"],
      "composite": true,
      "outDir": "dist"
    },
    "include": ["src/**/*"],
    "exclude": ["example/**/*", "cypress/**/*"],
    "references": [{ "path": "./tsconfig.node.json" }]
  }
  